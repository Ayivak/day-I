def validate_name(name):
    if len(name)<=15 and name.isalpha() and not name==" ":
        return True 
    else:
        return False#Start writing your code here

def validate_phone_no(phno):
    if len(phno)==10 and phno.isdigit() and not phno=="9999999999":
        return True 
    else:
        return False#Start writing your code here

